# ================================
# BossMind â€“ Environment Variables
# ================================

# ----------------
# Server
# ----------------
PORT=5055
HOST=127.0.0.1
NODE_ENV=production

# ----------------
# BossMind Guard (REQUIRED)
# ----------------
# Use a long random value. Example: 40+ chars.
BOSSMIND_ADMIN_TOKEN=PASTE_A_LONG_RANDOM_TOKEN_HERE

# ----------------
# OpenRouter API
# ----------------
OPENROUTER_API_KEY=PASTE_YOUR_REAL_KEY_HERE

# ----------------
# OpenRouter Defaults
# ----------------
OPENROUTER_DEFAULT_MODEL=openrouter/auto

# ----------------
# OpenRouter Routing Control
# ----------------
OPENROUTER_PROVIDERS_ALLOW=deepseek,openai
OPENROUTER_PROVIDERS_ORDER=deepseek,openai
OPENROUTER_PROVIDERS_DISALLOW=deepinfra,together,replicate,fireworks,groq

# ----------------
# OpenRouter Stability
# ----------------
OPENROUTER_TIMEOUT_MS=30000
OPENROUTER_RETRIES=2

# ----------------
# BossMind Safety
# ----------------
BOSSMIND_ROUTER_ENFORCED=true
BOSSMIND_MANUAL_MODEL_OVERRIDE=false
